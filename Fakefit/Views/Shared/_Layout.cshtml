
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free Website Template" name="keywords">
    <meta content="Free Website Template" name="description">

    <!-- Favicon -->
    <link href="~/Content/img/favicon.ico" rel="icon">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href="~/Content/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/style.min.css" rel="stylesheet">
</head>

<body class="bg-white">

    <!-- Navbar Start -->
    <div class="container-fluid p-0 nav-bar">
        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a href="@Url.Action("Index","Default")" class="navbar-brand">
                <h1 class="m-0 display-4 font-weight-bold text-uppercase text-white">Fakefit</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4 bg-secondary">
                    <a href="@Url.Action("Index","Default")" class="nav-item nav-link @(ViewBag.title=="Ana Sayfa"?"active":"")">Ana Sayfa</a>
                    <a href="@Url.Action("About","Default")" class="nav-item nav-link @(ViewBag.title=="Hakkımızda"?"active":"")">Hakkımızda</a>
                    <a href="@Url.Action("Feature","Default")" class="nav-item nav-link @(ViewBag.title=="Hizmetlerimiz"?"active":"")">Hizmetlerimiz</a>
                    <!-- <a href="@Url.Action("Class","Default")" class="nav-item nav-link">Classes</a> -->
                    <a href="@Url.Action("Contact","Default")" class="nav-item nav-link @(ViewBag.title=="İletişim"?"active":"")">İletişim</a>
                    <a href="@Url.Action("Login","Default")" class="nav-item nav-link @(ViewBag.title=="Giriş"?"active":"")">Giriş</a>
                </div>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->

    @RenderBody()

    <!-- Footer Start -->
    <div class="footer container-fluid mt-5 py-5 px-sm-3 px-md-5 text-white">
        <div class="row pt-5">
            <div class="col-lg-4 col-md-6 mb-5">
                <h4 class="text-primary mb-4">İletişim Bilgilerimiz</h4>
                <p><i class="fa fa-map-marker-alt mr-2"></i>İstanbul, 34755</p>
                <p><i class="fa fa-phone-alt mr-2"></i>+216 345 3456</p>
                <p><i class="fa fa-envelope mr-2"></i><a style="color: white;" href="mailto:20190301014@dogus.edu.tr">info@example.com</a></p>
                <div class="d-flex justify-content-start mt-4">
                    <a target="_blank" class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="https://twitter.com/i/flow/login?input_flow_data=%7B%22requested_variant%22%3A%22eyJsYW5nIjoidHIifQ%3D%3D%22%7D"><i class="fab fa-twitter"></i></a>
                    <a target="_blank" class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="https://www.facebook.com/?locale=tr_TR"><i class="fab fa-facebook-f"></i></a>
                    <a target="_blank" class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="https://tr.linkedin.com/in/furkan-erol-b7a86b200"><i class="fab fa-linkedin-in"></i></a>
                    <a target="_blank" class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 40px; height: 40px;" href="https://www.instagram.com/ "><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-5">
                <h4 class="text-primary mb-4">Sayfalarımız</h4>
                <div class="d-flex flex-column justify-content-start">
                    <a class="text-white mb-2" href="@Url.Action("Index","Default")"><i class="fa fa-angle-right mr-2"></i>Ana Sayfa</a>
                    <a class="text-white mb-2" href="@Url.Action("About","Default")"><i class="fa fa-angle-right mr-2"></i>Hakkımızda</a>
                    <a class="text-white mb-2" href="@Url.Action("Feature","Default")"><i class="fa fa-angle-right mr-2"></i>Hizmetlerimiz</a>
                    <a class="text-white mb-2" href="@Url.Action("Contact","Default")"><i class="fa fa-angle-right mr-2"></i>İletişim</a>
                    <a class="text-white mb-2" href="@Url.Action("Login","Default")"><i class="fa fa-angle-right mr-2"></i>Giriş</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-5">
                <h4 class="text-primary mb-4">Çalışma Saatlerimiz</h4>
                <h5 class="text-white">Pazartesi - Cuma</h5>
                <p>08.00 - 23.00</p>
                <h5 class="text-white">Cumartesi - Pazar</h5>
                <p>09.00 - 21.00</p>
            </div>
        </div>
        <div class="container border-top border-dark pt-5">
            <p class="m-0 text-center text-white">
                &copy; <a class="text-white font-weight-bold" href="@Url.Action("Index","Default")">FakeFit</a> 2023 Tüm Hakları Saklıdır.
            </p>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="@Url.Action("Index","Default")" class="btn btn-outline-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/easing/easing.min.js"></script>
    <script src="~/Content/lib/waypoints/waypoints.min.js"></script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

</body>

</html>
